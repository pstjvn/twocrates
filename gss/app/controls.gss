@def TC_CONTROL_BUTTONS_BG url('../assets/controls-bg.png');

.design-tool-controls {
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  height: 40px;
  background: TC_CONTROL_BUTTONS_BG;
}

.design-tool-control-button {
  background-color: #342D82;
}

.design-tool-controls .pstj-button.pstj-button-active {
  background-color: rgba(0,0,0,0.5);
  top: 0;
}

.design-tool-controls .pstj-button {
  display: table-cell;
  border: none;
  padding: 0;
  background: transparent;
}
