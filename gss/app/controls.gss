/**
 * How the whole control will look like.
 */
@def TC_CONTROL_BUTTONS_BG url('../assets/controls-bg.png');

.design-tool-controls {
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  height: 40px;
  background: MAIN_BLUE;
}

.design-tool-control-button {
  display: table-cell;
  border: none;
  padding: 0;
  outline: none;
  cursor: pointer;
}

.design-tool-control-button-active {
  background-color: rgba(0,0,0,0.5);
}
