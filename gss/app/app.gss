.header {
  top: 0;
  left: 0;
  width: 100%;
  height: 45px;
  background-color: #E8E7D9;
}

.container {
  width: 0;
  height: 0;
  background-color: red;
  overflow: hidden;
  /* Provide some effects when scaling? */
  -webkit-transition: width 0.2s linear, height 0.2s linear;
  /* @alternate */
  transition: width 0.2s, height 0.2s;
}

.child {
  background-color: yellow;
  overflow: scroll;
}
